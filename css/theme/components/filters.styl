.filters
    > .title
        @media media-min-lg
            display: none

    .label
        color: var(--color-text)
        font-weight: regular
        font-size: 14px

        &:before
            display: inline-block
            margin-top: -2px
            margin-right: 5px
            width: 15px
            height: 15px
            border: solid 1px var(--color-border)
            border-radius: 2px
            content: ''
            vertical-align: middle

    .ul--0
        @media media-max-lg
            padding: (gap / 2) 0

    .li--0:hover
        .label:before
            border-color: var(--primary)
            background: var(--primary)

    &__list
        @media media-max-lg
            background: var(--white)

    &__swatches
        .label
            &:before
                display: none

    &__filter
        padding: (gap / 2) 0
        box-shadow: none

        &:hover
            box-shadow: none

        .count
            font-size: 12px

    &__name, &__filtered .subtitle
        padding: (gap / 2) 0
        border-bottom: solid 1px var(--color-border)
        color: var(--color-text)
        font-weight: medium
        font-size: 14px

    &__name
        background: url(down) no-repeat center right 10px

    &__filtered
        .filtered
            &__clear, &__name
                display: none

            &__value
                color: var(--color-text)
                font-weight: regular
                font-size: 14px

        .li--0
            padding: 7px
            border-radius: 2px
            background: #f5f5f5
            box-shadow: none

            .btn
                display: flex
                order: -1
                justify-content: center
                align-items: center
                padding: 0
                width: 20px
                height: 20px
                border-radius: 50%
                background: var(--white)

                .ico
                    width: 8px
                    height: 7px
                    fill: var(--color-text)

                &:before
                    display: none