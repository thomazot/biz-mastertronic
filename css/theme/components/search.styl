.search
    .header &
        &__button
            .ico
                fill: currentColor

        @media media-max-sm
            margin-left: auto

            &.on
                .search
                    &__form .input-box
                        height: 100%

            &__hide
                top: 0
                right: 0
                display: flex
                justify-content: center
                align-items: center
                padding: 0
                width: 40px
                height: 100%

            &__input
                max-width: 100%
                height: 100%

            &__button
                height: 100%
                background: none
                color: var(--primary)

                .ico
                    width: 22px
                    height: 22px

        @media media-min-sm
            flex: 0 1 555px
            margin: auto

            &__input
                padding-right: 50px
                height: 42px
                border: solid 1px var(--color-input)
                border-radius: 2px
                box-shadow: none
                color: var(--color-text)
                font-weight: reuglar
                font-size: 14px
                transition: all .2s ease-in-out

                &::placeholder
                    color: var(--color-placeholder)

                &:focus
                    border-color: var(--color-text)

                    &::placeholder
                        color: transparent

            &__button
                position: absolute
                right: 0
                display: flex
                justify-content: center
                align-items: center
                padding: 0
                width: 50px
                height: 42px
                background: none
                box-shadow: none
                color: var(--color-text) t

                .ico
                    width: 22px
                    height: 22px

                &:hover
                    background: none
                    color: var(--primary)