.cms-home .header-container + .banner
    margin-top: -(gap / 2)

    &__wrapper
        position: relative

    .owl
        &-controls
            position: absolute
            bottom: 0
            left: 0
            z-index: 20
            padding-bottom: (gap / 2)
            width: 100%

        &-page
            span
                max-width: 6px
                width: 23px
                height: 6px
                border-radius: 6px
                background: var(--color-input)
                opacity: 1
                transition: all .2s ease-in-out

            &.active
                span
                    max-width: 23px
                    background: var(--primary)

.banner
    img
        object-fit: cover