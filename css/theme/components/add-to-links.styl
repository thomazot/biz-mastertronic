.add-to-links
    li:not(.link-wishlist)
        display: none

    .link-wishlist
        a
            display: flex
            justify-content: center
            align-items: center
            width: 50px
            height: 50px
            border: solid 1px #eee
            border-radius: 50%
            background: var(--white)
            color: var(--primary)
            font-size: 0

            .ico
                width: 20px
                height: 20px
                fill: currentColor

            &:hover
                background: var(--primary)
                color: var(--primary-contrast)