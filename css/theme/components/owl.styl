.owl
    &-carousel
        --color: #c7c7c7

    &-prev, &-next
        display: flex
        justify-content: center
        align-items: center
        padding: 0
        width: 38px
        height: 52px
        background: var(--white)
        box-shadow: 0 0 10px rgba(0, 0, 0, .1)
        color: var(--color)
        transition: all .2s ease-in-out

        &:before
            position: static
            display: inline-block
            width: auto
            height: auto
            font-size: 18px
            line-height: 1

    .products &
        &-prev
            @media (min-width: (viewport + 40px))
                left: -40px

        &-next
            @media (min-width: (viewport + 40px))
                right: -40px
