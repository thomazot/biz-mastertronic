.breadcrumb
    margin-top: -(gap / 2)
    padding: 10px 0
    background: #f5f5f5

    .catalog-product-view .wrapper > &
        display: none

    &__list
        container()

    &__home .breadcrumb__link:before
        display: none

    &__sep
        padding: 0 10px

        .ico
            width: 4px
            height: 12px
            fill: var(--color-text)

    &__link, &__last
        display: flex
        justify-content: center
        align-items: center
        height: 35px
        color: var(--color-text)
        font-weight: medium
        font-size: 14px

    &__last
        padding: 0 (gap / 2)
        border-radius: 2px
        background: var(--white)

    .catalog-product-view &
        margin-top: 0
        box-shadow: -400px 0 0 #f5f5f5, -800px 0 0 #f5f5f5

        &__list
            padding: 0
            max-width: 100%

        &__link, &__sep, &__last
            color: #a3a3a3
            font-weight: light
            font-size: 12px

        &__sep
            padding: 0

            .ico
                width: 2px
                height: 8px

        &__last
            padding: 0
            background: none
            color: var(--color-text)
            font-weight: semibold